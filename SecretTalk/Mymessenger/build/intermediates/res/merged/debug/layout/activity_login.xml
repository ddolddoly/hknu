<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="100dp"
    tools:context=".MainActivity"
    android:weightSum="1"
    android:background="@drawable/st"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/imageView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff9fffd">

        <TextView
            android:id="@+id/LogtextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/id" />

        <EditText
            android:id="@+id/LogeditText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff9fffd">

        <TextView
            android:id="@+id/LogtextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pw"/>

        <EditText
            android:id="@+id/LogeditText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="#fff9fffd">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="BtnClickLogIn"
            android:text="@string/login"
            android:id="@+id/login" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="BtnClickJoin"
            android:text="@string/join"
            android:id="@+id/join" />
    </LinearLayout>

</LinearLayout>

